<div class="container app-intro">
  <div class="row">
        <a href="/">&#x3c;&#x3c;back</a>
    </div>
    <div class="row">
      <h1 class="text-center">Details</h1>
    </div>
</div>

<div class="container app-main">

<div class="panel panel-default" style="background-color: lightgrey;">
    {{#if person.avatar}} <!--Check if there is a icon-->
        <img src="{{person.avatar}}" alt="{{person.first_name}} - {{person.last_name}}" width="100" height="100">
        {{else}}
        &nbsp;
        {{/if}}
    <div class="panel-body">
      <label>First Name: </label>{{person.first_name}}<br/> <!--metadata output-->
      <label>Last Name: </label>{{person.last_name}}<br/>
      <label>Email: </label>{{person.email}}<br/>
      <label>Job Title: </label>{{person.job_title}}<br/>
      <label>Comments:</label><br/>
      {{#each comments}} <!--repeat over comments-->
        {{comment}}
        <hr/>
      {{/each}}
    </div>
  </div>
</div>

</div>
